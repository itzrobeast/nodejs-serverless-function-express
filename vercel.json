{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "instagram-webhook.js", "use": "@vercel/node" },
    { "src": "google-calendar.js", "use": "@vercel/node" },
    { "src": "setup-business.js", "use": "@vercel/node" },
    { "src": "assistant.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/instagram-webhook", "dest": "instagram-webhook.js" },
    { "src": "/google-calendar", "dest": "google-calendar.js" },
    { "src": "/assistant", "dest": "assistant.js" },
    { "src": "/setup-business", "dest": "setup-business.js" },
    { "src": "/favicon.ico", "dest": "favicon.ico" },
    { "src": "/favicon.png", "dest": "favicon.png" },
    { "src": "/(.*)", "dest": "index.js" }
  ],
  "headers": [
    {
      "source": "/(.*)", // Apply headers to all routes
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://mila-verse.vercel.app" // Allow requests from this domain
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS" // Allow these methods
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization" // Allow these headers
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true" // Allow credentials
        }
      ]
    }
  ]
}
